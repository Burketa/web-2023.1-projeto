<div class="row">
    <h1>{{items.title}}</h1>
    <h2 class="mt-3">Adicionar um item</h2>
    <form method="POST" action="http://localhost:3001/api/item">
        <div class="row align-items-center">
            <div class="col-3">
                <label for="url">URL da Imagem</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://minha.imagem/legal">
            </div>
            <div class="col-3">
                <label for="name">Nome</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Nome">
            </div>
            <div class="col-3">
                <label for="description">Descrição</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Descricão">
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-primary">Adicionar ao baú</button>
            </div>
        </div>
    </form>
    <h2 class="mt-5">Baú</h2>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Imagem</th>
                <th scope="col">Nome</th>
                <th scope="col">Descricão</th>
            </tr>
        </thead>
        <tbody>
            {{#data}}
            <tr>
                <td>
                    <img style="width: 100px; height: 100px;" src="{{imageUrl}}" />
                </td>
                <td>{{name}}</td>
                <td>{{description}}</a>
                </td>
            </tr>
            {{/data}}
        </tbody>
    </table>
</div>

<script type="module" src="javascripts/itemController.js"></script>