<div class="row">
    <h1>{{items.title}}</h1>
    <h2 class="mt-3">{{items.subtitle}}</h2>
    <form id="form-add">
        <div class="row align-items-center">
            <div class="col-3">
                <label for="imageUrl">URL da Imagem</label>
                <input type="text" class="form-control" id="imageUrl" name="imageUrl"
                    placeholder="http://minha.imagem/legal">
            </div>
            <div class="col-3">
                <label for="name">Nome</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Nome">
            </div>
            <div class="col-3">
                <label for="description">Descrição</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Descricão">
            </div>

            {{#user}}
            <input type="hidden" class="form-control" id="createdBy" name="createdBy" value="{{user}}">
            {{/user}}
            {{^user}}
            <input type="hidden" class="form-control" id="createdBy" name="createdBy" value="Viajante Anônimo">
            {{/user}}

            <div class="col-3">
                <button type="submit" class="btn btn-primary">{{items.buttonAdd}}</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-3">{{items.description}}</h2>
        </div>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Imagem</th>
                <th scope="col">Nome</th>
                <th scope="col">Descricão</th>
                <th scope="col">Depositado por</th>
            </tr>
        </thead>
        <tbody>
            {{#data}}
            <tr>
                <td>
                    <img style="width: 100px; height: 100px;" src="{{imageUrl}}" />
                </td>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{createdBy}}</td>
            </tr>
            {{/data}}
        </tbody>
    </table>
</div>

<script type="module" src="javascripts/ItemController.js"></script>